@model ListOperationsTestApp.Models.BaseModel

<div class="jumbotron">
    <div class="panel panel-default">
        <div class="panel-body">
            @using (Html.BeginForm("Update", "ListOperations", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                foreach (var detail in Model.Details)
                {
                    <div class="form-group">
                        @Html.Label(detail.Name)
                        @Html.TextBox(detail.Name, detail.Name, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <select class="form-control" name="@detail.BooleanValue">
                            <option value="1">True</option>
                            <option value="0">False</option>
                        </select>
                    </div>
                }
                <button type="submit" class="btn btn-primary">Update</button>
            }
        </div>
    </div>

</div>
