@model ListOperationsTestApp.Models.OrderViewModel

<div class="jumbotron">
    <div class="panel panel-default">
        <div class="panel-body" id="mainForm">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="row">
                        @Html.LabelFor(model => model.Id, new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="row">

                        @Html.LabelFor(model => model.TotalCost, new { @class = "control-label col-md-2" })
                        @Html.DisplayTextFor(m => m.TotalCost)
                    </div>
                </div>
                <div class="form-horizontal">
                    @foreach (var DetailsList in Model.DetailsList)
                    {
                        foreach (var detail in DetailsList)
                        {
                            @Html.Partial("DetailsForm", detail)
                        }
                    }
                    <div class="form-group">
                        <div class="col-md-offset-1 col-md-11">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>