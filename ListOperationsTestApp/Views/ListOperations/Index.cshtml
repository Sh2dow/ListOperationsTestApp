@model ListOperationsTestApp.Models.OrderViewModel

<div class="jumbotron">
    <div class="panel panel-default">
        <div class="panel-body" id="mainForm">
            @using (Html.BeginForm())
            {
                <div class="row form-group">
                    @Html.LabelFor(model => model.Id, new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control col-md-2" } })
                </div>
                <div class="row form-group form-inline">
                    @Html.Label("Name", new { @class = "col-md-3" })
                    @Html.Label("Number", new { @class = "col-md-3" })
                    @Html.Label("Allowed", new { @class = "col-md-3" })
                </div>
                <div class="form-group">
                    @for (var i = 0; i < Model.DetailsList.Count; i++)
                    {
                        for (var j = 0; j < Model.DetailsList[i].Count; j++)
                        {
                            <div class="row form-inline">
                                @Html.TextBoxFor(m => m.DetailsList[i][j].Name, new { @class = "form-control" })

                                @Html.TextBoxFor(m => m.DetailsList[i][j].Number, new { @class = "form-control" })

                                @{
                                    var checkboxAttributes = Model.DetailsList[i][j].Allowed ?
                                        (object)new { @class = "form-control", @checked = "checked" } :
                                        (object)new { @class = "form-control" };
                                }
                                @Html.CheckBoxFor(m => m.DetailsList[i][j].Allowed, checkboxAttributes)
                            </div>
                        }
                    }
                </div>
                <div class="row form-group">
                    @Html.LabelFor(model => model.TotalCost, new { @class = "control-label col-md-3" })
                    @Html.DisplayFor(m => m.TotalCost, new { @class = "control-label col-md-3" })
                </div>
                <div class="row col-md-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            }
        </div>
    </div>
</div>